extends main_layout.pug

block style
    style 
        include ./../normal/add_quote.css

block content
    .formContainer 
        .title Add Quote 

        form(action="/addquote" ,method="POST")
            label(for="quote") Quote:
            br
            textarea(name="quote", cols="15", rows="3", placeholder="Add your quote here..." required)
            br

            label(for="quotee") Quotee:
            br
            input(type="text", name="quotee" placeholder="Add the quotee here..." required)
            br

            input(type="submit" value="Submit")
